<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Movies_name</th>
      <th>Description</th>
      <th>Movie length</th>
      <th>Actors name</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie.each do |movie| %>
      <tr>
        <td><%= movie.movies_name %></td>
        <td><%= movie.description %></td>
        <td><%= movie.movie_length %></td>
        <td><%= movie.actors_name %></td>
        <td><%= movie.rating %></td>
         <td><%= movie.poster %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

