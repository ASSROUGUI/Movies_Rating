<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
       
<p><%= image_tag(@movie.poster, size: "200x200", alt: "Movie Image") %> </p>

<div class="star-rating" data-score= <%= @avg_review %> ></div>

<div><%= raw  (@movie.tyoler)%> </div>

        <div class="star-rating" data-score= <%= @avg_review %> ></div>
        <em><%= "#{@movie.movie_length} review" %></em>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @movie.movies_name %></td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @movie.description %></td>
              </tr>
              <tr>
                <td><strong>Movie length:</strong></td>
                <td><%= @movie.movie_length %></td>
              </tr>
             
              <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @movie.rating %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
     
        

        <% if @movie.reviews.blank? %>
          <h3>No reviews just yet, would you like to add the first!</h3>
          <% else %>
          <% @movie.reviews.each do |review| %>
            <div class="reviews">
            <div class="star-rating" data-score= <%= review.rating %> ></div>

            <p><%= review.comment %> by  <%=review.user.email%></p>
            </div>
            <% end %>
            <% end %>

            <%=link_to 'Write a Review', new_movie_review_path(@movie), class: "btn btn-danger" %>

      </div>
  
    </div>
  </div>
</div>



<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>















<% if(user_signed_in? && (current_user.id == @movie.user_id))%>
<td><%= link_to 'Edit', edit_movie_path(@movie) %></td>
<td><%= link_to 'Delete',@movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
