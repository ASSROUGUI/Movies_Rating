# <h1>Movies#show</h1>
# <p>Find me in app/views/movies/show.html.erb</p>
<p id="notice"><%= notice %></p>

<p>
  <strong>Movies_name:</strong>
  <%= @movie.movies_name %>
</p>

<%= image_tag(@movie.poster, size: "100x100", alt: "Movie Image") %>



<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>
# <%= video_tag(@movie.tyoler) %>
<%= video_tag (@movie.tyoler).to_s, :size => "320x240", :controls => true %>
<iframe src='https://www.youtube.com/embed/<%= @movie.tyoler%>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' frameborder='0' allowfullscreen></iframe>




<p>
  <strong>Movie length:</strong>
  <%= @movie.movie_length %>
</p>

<p>
  <strong>Actors name:</strong>
  <%= @movie.actors_name %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @movie.rating %>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

